<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%=link_to "Show",book_path(book.id)%>
        <%=link_to "Edit",edit_book_path(book.id)%>
        <%=link_to "Destroy",book_path(book.id)%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book,url:'/books', local:true do |f| %>
<div class="form">
<h4>Title</h4>
<%= f.text_field:title %>
</div>
<div  class="form">
<h4>Body</h4>
<%= f.text_area:body %>
</div>
<div class="actions"><%= f.submit'Create Book'%></div>

<% end %>
</div>


